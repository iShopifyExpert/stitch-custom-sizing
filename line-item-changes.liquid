          <span data-size-name="wrist"></span>
          <span data-size-name="length"></span>
        </div>
        <div class="custom-size-diagram-input">
          <label for="neck" class="inpu-label">Neck Depth</label>
          <input data-name="neck" type="text" value="" data-mesurment="cm">
          <input data-id="neck" type="hidden" value="" name="properties[neck_depth]">
          
          <label for="hole" class="inpu-label">Arm Hole</label>
          <input data-name="hole" type="text" value="" data-mesurment="cm">
          <input data-id="hole" type="hidden" value="" name="properties[arm_hole]">
          
          <label for="sleeve_length" class="inpu-label">Sleeve Length</label>
          <input data-name="sleeve_length" type="text" data-mesurment="cm" value="">
          <input data-id="sleeve_length" type="hidden" value="" name="properties[sleeve_length]">
          
          <label for="chest" class="inpu-label">Chest</label>
